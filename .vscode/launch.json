{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Production",
      "type": "node-terminal",
      "request": "launch",
      "command": "node --run build && node --run start",
      "serverReadyAction": {
        "pattern": "Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Development",
      "type": "node-terminal",
      "request": "launch",
      "command": "node --run dev",
      "serverReadyAction": {
        "pattern": "Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    }
  ]
}