root = true

[*]

charset = utf-8
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false
max_line_length = 120

[*.{js,cjs,mjs,jsx,ts,tsx}]
indent_size = 2

[*.{xml,xaml,html}]
indent_size = 2

[*.{css,scss}]
indent_size = 4

[*.{json,yml,yaml}]
indent_size = 2

[*.{md}]
indent_size = 2

[*.{py}]
indent_size = 4

[*.{cs}]
indent_size = 4
end_of_line = crlf

[*.{cmd,bat}]
indent_size = 4
end_of_line = crlf